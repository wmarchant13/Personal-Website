{
  "name": "bun-react-template",
  "version": "1.3.0",
  "private": true,
  "type": "module",
  "homepage": "https://wmarchant13.github.io/personal-website",
  "scripts": {
    "dev": "next dev",
    "build": "NEXT_PUBLIC_BASE_PATH=/personal-website next build",
    "start": "next start",
    "lint": "eslint",
    "deploy": "bun run build && gh-pages -d out",
    "prepare": "husky",
    "commit": "git add . && git-cz && git push origin $(git symbolic-ref --short HEAD)"
  },
  "release-it": {
    "npm": {
      "publish": false,
      "version": false
    },
    "hooks": {
      "before:init": "echo 'Releasing with Bun...'",
      "after:bump": "bun run build",
      "after:release": "bun publish"
    }
  },
  "config": {
    "commitizen": {
      "path": "./custom-adapters/cz-custom.cjs"
    }
  },
  "dependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "commitizen": "^4.3.1",
    "husky": "^9.1.7",
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.9.6",
    "sass": "^1.97.3",
    "semantic-release": "^25.0.2"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/bun": "latest",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "gh-pages": "^6.3.0",
    "@types/node": "^20",
    "babel-plugin-react-compiler": "1.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "typescript": "^5"
  }
}
